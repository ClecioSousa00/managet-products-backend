generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  username    String
  password    String
  categories  Category[]
  product     Product[]
  saleProduct SaleProduct[]

  @@map("users")
}

model Category {
  id     String @id @default(uuid())
  name   String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  product Product[]

  @@map("categories")
}

model Product {
  id            String    @id @default(uuid())
  name          String
  quantity      Int
  salePrice     Decimal   @map("sale_price") @db.Decimal(12, 2)
  purchasePrice Decimal   @map("purchase_price") @db.Decimal(12, 2)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId String?   @map("category_id")

  saleProduct SaleProduct[]

  @@map("products")
}

model SaleProduct {
  id              String    @id @default(uuid())
  quantity        Int
  salePriceAtTime Decimal   @map("sale_price_at_time") @db.Decimal(12, 2)
  soldAt          DateTime  @default(now()) @map("sold_at")
  updatedAt       DateTime? @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String  @map("product_id")

  @@map("sale_products")
}
